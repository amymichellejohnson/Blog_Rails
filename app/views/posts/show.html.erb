<h2><%= @post.title %></h2>
<p>Posted on: <%= @post.date %></p>
<h4><%= @post.blog %></h4>
<p>
  <%= link_to "Edit entry", edit_post_path(@post) %> |
  <%= link_to "Delete entry", post_path(@post), :data => {:confirm => "Are you sure?", :method=> "delete"} %> |
  <%= link_to "Comment", new_post_comment_path(@post) %>
</p>

<% if @comments.any? %>
  <h2>Comments on this blog:</h2>
<% end %>


<% @comments.each do |comment| %>
  <div class="ui feed">
    <div class="event">
      <div class="label">
        <i class="pencil icon"></i>
      </div>
      <div class="content">
        <div class="summary">
          <%= comment.name %> wrote
        </div>
        <div class="extra text">
          <%= comment.comment %>
        </div>
      </div>
    </div>
  </div>
  <p><%= link_to "Edit comment", edit_post_comment_path(@post, comment) %> |
  <%= link_to "Delete comment", post_comment_path(@post, comment), :data => {:confirm => "Are you sure?", :method=> "delete"} %>
  <br>
<% end %>
<br>
<%= link_to "Return to Main Page", posts_path %>
